        <script type="text/javascript" src="${pageContext.request.contextPath }/js/jquery.js"></script>
        <script type="text/javascript" src="${pageContext.request.contextPath }/js/ajaxfileupload.js"></script>
	</head>
    <script type="text/javascript">
        function fileChange(){
			//使用引入的ajaxfileupload.js文件
        	$.ajaxFileUpload({
				//用于文件上传到服务的请求地址
			    url:"${pageContext.request.contextPath}/prod/ajaxImg.action",
				//是否遵循安全协议，一般设置为false
				secureuri: false,
				//文件上传控件的id
				fileElementId:"pimage",
				//返回json数据类型，然后取处理
				dataType:"json",
				//服务器成功响应后，我们要进行处理，
				//obj:完成图片上传后，返回给客户读研的图片对象
				success:function (obj) {
					//清空原有位置数据
					$("#imgDiv").empty();
					//创建img标签
					var imgObj = $("<img>");
					//为img标签追加一些属性
					imgObj.attr("src","/image_big/"+obj.imgurl);
					imgObj.attr("width","100px");
					imgObj.attr("height","100px");
					//将img标签添加到div中
					$("#imgDiv").append(imgObj);
				},
				error:function (e) {//当上传失败后，服务响应失败的处理函数
                    alert(e.message);//弹窗失败信息
				}
		   });
        }
    </script>
